<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="obj"
            type="de.wackernagel.essbar.ui.pojos.Menu"/>
        <variable
            name="holder"
            type="de.wackernagel.essbar.ui.MenuListAdapter.MenuViewHolder"/>
        <variable
            name="adapter"
            type="de.wackernagel.essbar.ui.MenuListAdapter"/>
    </data>

    <de.wackernagel.essbar.utils.CheckableFrameLayout
        android:background="@drawable/checkable_selector"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:edit="@{holder.isChanged()}">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="56dp"
            android:text="@{@string/menu_name_and_price(obj.menuName, obj.price)}"
            tools:text="Frühstück"
            style="@style/ListItemTitle"/>

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_gravity="end|center_vertical"
            android:visibility="@{obj.editable}"
            android:checked="@{adapter.isMenuChecked( obj.id )}"
            android:onCheckedChanged="@{holder::onCheckedChanged}"
            tools:checked="true" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/ic_shopping_cart_black_24dp"
            android:tint="@color/colorAccent"
            android:contentDescription="@null"
            android:visibility="@{!obj.editable &amp;&amp; obj.ordered}"
            tools:visibility="gone"/>

    </de.wackernagel.essbar.utils.CheckableFrameLayout>
</layout>